# AI Watermark Detection Tool Configuration
# Copy this file to .env and adjust values as needed

# API Configuration
API__HOST=0.0.0.0
API__PORT=8000
API__DEBUG=false
API__CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Model Configuration
MODEL__GEMMA_MODEL_NAME=google/gemma-2-2b
MODEL__PHI_MODEL_NAME=microsoft/Phi-3-mini-4k-instruct
MODEL__MODEL_CACHE_DIR=./models_cache
MODEL__MAX_MODEL_MEMORY_MB=2048
MODEL__CPU_THREADS=4

# Detection Configuration
DETECTION__DEFAULT_THRESHOLD=0.5
DETECTION__SYNTHID_WEIGHT=0.7
DETECTION__CUSTOM_WEIGHT=0.3
DETECTION__ENABLE_FALLBACK=true

# Database Configuration
DATABASE__DATABASE_URL=sqlite:///./watermark_detection.db
DATABASE__MAX_HISTORY_RECORDS=10000
DATABASE__BACKUP_ENABLED=true

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO